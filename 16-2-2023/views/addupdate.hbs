  <body>

    <nav
      class="navbar navbar-expand-lg navbar-dark bg-dark static-top header-bg-dark"
    >
      <div class="container">

        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
            </li>

          </ul>
        </div>
      </div>
    </nav>

    <section class="showcase">
      <div class="container">
        <div class="pb-2 mt-4 mb-2 border-bottom">
          <h2>Form per la creazione di un database di auto</h2>
        </div>
        <div class="row">
          <div class="col-sm-10 offset-md-1">
            <form action="/" method="POST" autocomplete="off">
              <input type="hidden" name="_id" value="{{auto._id}}" />
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label>Marca</label>
                  <input
                    type="text"
                    class="form-control"
                    name="marca"
                    placeholder="marca"
                    value="{{auto.marca}}"
                  /></div>
                <div class="form-group col-md-6">
                  <label>Modello</label>
                  <input
                    type="text"
                    class="form-control"
                    name="modello"
                    placeholder="modello"
                    value="{{auto.modello}}"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label>Cilindrata</label>
                  <input
                    type="text"
                    class="form-control"
                    name="cilindrata"
                    placeholder="cilindrata"
                    value="{{auto.cilindrata}}"
                  />
                </div>

                <div class="form-group col-md-6">
                  <label>Provenienza</label>
                  <input
                    type="text"
                    class="form-control"
                    name="provenienza"
                    placeholder="provenienza"
                    value="{{auto.provenienza}}"
                  />

                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label>Motorizzazione</label>
                  <input
                    class="form-control"
                    name="motorizzazione"
                    placeholder="motorizzazione"
                  />{{auto.motorizzazione}}
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label>Consumo</label>
                  <input
                    type="text"
                    class="form-control"
                    name="consumo"
                    placeholder="consumo"
                    value="{{auto.consumo}}"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label>Velocità_max</label>
                  <input
                    type="text"
                    class="form-control"
                    name="velocità_max"
                    placeholder="velocità_max"
                    value="{{auto.velocità_max}}"
                  />
                </div>
              </div>
              <div class="form-group float-right my-5">
                <button type="submit" class="btn btn-primary btn-sm">
                  Invia
                </button>
                <a class="btn btn-info btn-sm" href="/list"> Vedi tutti</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <!-- Footer -->
    <footer class="footer bg-light footer-bg-dark mt-5">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
